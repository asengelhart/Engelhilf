<%= form_for @ticket do |f| %>
  <%= user_field(@user_id, @display_user_list) %>
  <div>
    <%= f.label :subject %> <br>
    <%= f.text_field :subject %> <br>
  </div>
  <div>
    <%= f.label :content, "Describe your problem:" %> <br>
    <%= f.text_area :content %> <br>
  </div>
  <div>
    <%= f.label :urgency, "How urgent is your problem? (select one)" %> <br>
    <%= f.collection_radio_buttons :urgency, Ticket.urgency_levels, :first, :last %> <br>
  </div>
  <div>
    <%= f.label :closed, "Check this box to close the ticket:" %>
    <%= f.check_box :closed, {}, true, false %>
  </div>
  <%= f.submit %>
<% end %>