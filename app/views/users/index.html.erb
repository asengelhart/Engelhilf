<% title "User Index" %>
<table>
  <tr>
    <th>User Name</th>
    <th>Email Address</th>
    <th>Total Tickets Written</th>
    <th>Total Comments Written</th>
    <th>View User Page</th>
    <th>Edit User</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.tickets.count %></td>
      <td><%= user.comments.count %></td>
      <td><%= link_to "User Page", user_path(user) %></td>
      <td><%= link_to "Edit User", edit_user_path(user) %></td>
    </tr>
  <% end %>
</table>
<p><%= link_to "Create New User", new_user_path %></p>