<%= form.fields_for :comments, ticket.comments.build do |c| %>
  <!--<%= c.hidden_field :ticket_id %>-->
  <%= c.hidden_field :user_id, value: logged_in_user.id %>
  <%= c.label :content, "Enter note here:" %> <br>
  <%= c.text_area :content %> <br>
<% end %>